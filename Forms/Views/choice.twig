<div class="form-group">
	<label for="{{ id }}" class="col-sm-3 control-label">{{ label|trans }}
		{% if required %}<span class="req text-danger" title="{{ 'forms.required'|trans }}">*</span>{% endif %}
	</label>
	<div class="col-sm-5">
		<select class="form-control{% if class %} {{ class }}{% endif %}" id="{{ id }}" name="{{ name }}" {% if required %}required="1"{% endif %} {% if attr %}{% for k, v in attr %}{{ k }}="{{ v }}" {% endfor %}{% endif %}>
			{% for c in choices %}
				<option value="{{ c.key }}"{% if c.selected %} selected="1"{% endif %}>{{ c.value }}</option>
			{% endfor %}
		</select>
		{% if help %}
			<span class="help-block">{{ help|trans }}</span>
		{% endif %}
	</div>
	{% if errors %}
		<div class="col-sm-4 text-danger">
			{% for e in errors %}
				{{ e|trans }}{% if not loop.last %}; {% endif %}
			{% endfor %}
		</div>
	{% endif %}
</div>