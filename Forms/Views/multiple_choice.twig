<div class="form-group multipleChoice">
	<label for="{{ id }}" class="col-sm-3 control-label">{{ label|trans }}
		{% if required %}<span class="req text-danger" title="{{ 'forms.required'|trans }}">*</span>{% endif %}
	</label>
	<div class="col-sm-5">
        {% for c in choices %}
			<div class="mcLine">
				<label>
					<input type="checkbox" value="{{ c.key }}" name="{{ name }}[]"{% if c.selected %} checked="1"{% endif %} />
                    {{ c.value }}
				</label>
			</div>
        {% endfor %}
		{% if help %}
			<span class="help-block">{{ help|trans }}</span>
		{% endif %}
	</div>
	{% if errors %}
		<div class="col-sm-4 text-danger">
			{% for e in errors %}
				{{ e|trans }}{% if not loop.last %}; {% endif %}
			{% endfor %}
		</div>
	{% endif %}
</div>