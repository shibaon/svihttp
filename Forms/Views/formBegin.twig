<form class="form-horizontal{% if attr.class %} {{ attr.class }}{% endif %}" action="{{ action }}" method="{{ method }}" {% if noValidate %}novalidate{% endif %} id="form{% if name %}_{{ name }}{% endif %}" {% if enctype %}enctype="{{ enctype }}"{% endif %} {% if attr %}{% for k, v in attr %}{{ k }}="{{ v }}" {% endfor %}{% endif %}>
	<input type="hidden" name="form_id" value="{{ id }}" />
	{% if errors|length %}
		{% for e in errors %}
			<div class="alert alert-danger alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				{{ e|trans|raw }}
			</div>
		{% endfor %}
	{% endif %}